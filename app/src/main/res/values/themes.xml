<resources>
    <style name="Theme.CalculGraph" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.CalculGraph2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- my styles -->
    <style name="ButtonsMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/buttonsMainColor</item>
    </style>

    <style name="ButtonStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@color/dialogColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextViewGame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextViewSettingsMargin" parent="TextViewSettings">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="TextViewInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EditText" parent="Spinner" /> <!--  same style  -->
</resources>